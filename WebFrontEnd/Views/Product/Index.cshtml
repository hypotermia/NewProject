@model IEnumerable<WebFrontEnd.Models.Product>

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductsName</td>
                <td>@item.ProductsPrices</td>
                <td>@item.quantity</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add New Product</a>
